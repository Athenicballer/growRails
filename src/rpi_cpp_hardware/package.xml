<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>rpi_cpp_hardware</name>
  <version>0.0.0</version>
  <description>ROS 2 hardware package for RPi robot control.</description>
  <maintainer email="user@raspberrypi.local">grower</maintainer>
  <license>TODO: License declaration</license>

  <!-- CRITICAL: Changed from ament_python to ament_cmake -->
  <buildtool_depend>ament_cmake</buildtool_depend> 

  <!-- C++ Dependencies -->
  <depend>rclcpp</depend>
  <depend>std_msgs</depend>
  <depend>hardware_interface</depend>
  <depend>controller_interface</depend>
  <depend>rclcpp_components</depend>

  <!-- EXECUTION DEPENDENCIES (Required to run the nodes and launch file) -->
  <exec_depend>ros2launch</exec_depend>
  <exec_depend>rclcpp</exec_depend>
  <exec_depend>std_msgs</exec_depend>
  <exec_depend>geometry_msgs</exec_depend>


  <!-- Test Dependencies -->
  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>

  <!-- Python Launch Dependency (Still needed to run the launch file) -->
  <exec_depend>ros2launch</exec_depend> 
  
  <export>
    <!-- CRITICAL: Export as ament_cmake -->
    <build_type>ament_cmake</build_type>
  </export>
</package>
