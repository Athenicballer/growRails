<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>rpi_cpp_hardware</name>
  <version>0.0.0</version>
  <description>ROS 2 C++ nodes for Raspberry Pi 4 motor control (pigpio) and integrated sensor reading (ultrasonic/I2C).</description>
  <maintainer email="ros_user@todo.todo">ros_user</maintainer>
  <license>Apache-2.0</license>

  <!-- Dependencies for C++ compilation and execution -->
  <build_depend>rclcpp</build_depend>
  <build_depend>std_msgs</build_depend>
  <build_depend>geometry_msgs</build_depend>

  <exec_depend>rclcpp</exec_depend>
  <exec_depend>std_msgs</exec_depend>
  <exec_depend>geometry_msgs</exec_depend>
  
  <!-- NOTE: This package relies on the external system library 'pigpio' for hardware interaction. -->

  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
